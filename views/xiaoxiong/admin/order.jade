extends layout

append head

append body
    .navbar.navbar-inverse
        .container
            include header
            +header({"3" : "active"})
    .container
        .page-header
            h3 所有订单
        .panel.panel-default
            .panel-heading 订单列表
                span.badge.pull-right #{current_page} / #{total_page}
            table.table
                tr
                    th 下单日期
                    th 收货人
                    th 菜品
                    th 收款状态
                    th 操作
                - each order,index in orders
                    tr
                        td #{order.create_time}
                        td #{order.addr.name} #{order.addr.tel}
                        td
                            - each recipe in order.recipes
                                | #{recipe.title} X #{recipe.amount} <br/>
                        td #{order.pay}
                        td
                            .btn-group
        ul.pager
            - if (current_page === 1)
                li.previous.disabled
                    a(href="#") 上页
            - else
                li.previous
                    a(href="?page=#{current_page - 1}") 上页
            - if (total_page === current_page) 
                li.next.disabled
                    a(href="#") 下页
            - else
                li.next
                    a(href="?page=#{current_page + 1}") 下页

append script