extends layout

append head

append body
    .container-fluid
        h1 添加地址
        form(role="form")
            input(type="hidden", name="user_open_id", value="#{user_open_id}")
            .form-group
                label(for="name") 收货人
                input.form-control(type="text", name="name", required)
            .form-group
                label(for="tel") 电话
                input.form-control(type="text", name="tel", required)
            .form-group
                label(for="area") 地区
                input.form-control(type="text", name="area", placeholder="深圳", value="深圳", disabled, required)
            .form-group
                label(for="detail") 详细地址
                input.form-control(type="text", name="detail", required)